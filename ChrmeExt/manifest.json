{
    "manifest_version": 3,
    "name": "SummarAIze",
    "version": "1.0",
    "description": "AI-powered scientific article summarizer",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://api.groq.com/*",
        "https://*.sciencedirect.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.sciencedirect.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}